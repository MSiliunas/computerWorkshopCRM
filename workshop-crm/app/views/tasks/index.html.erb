<%= link_to 'Add new', new_task_path %>

<h3>Listing tasks</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Duration</th>
    <th>Price</th>
  </tr>

  <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.duration %></td>
        <td><%= task.price %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
      </tr>
  <% end %>
</table>
